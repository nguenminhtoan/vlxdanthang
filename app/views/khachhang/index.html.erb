
<script>
function DeleteRow() {
    if(confirm('Bạn có muốn xóa không ?'))
    {
      return true;
    }
    else
    {
      return false;
    }
}
</script>


<div class="box">
    <header>
        <div class="icons"><a href="/khachhang/new" class="btn btn-primary"><i class="glyphicon glyphicon-plus"></i>Thêm Mới</a></div>
        <h5>Danh Mục Khách Hàng</h5>
    </header>

    <div class="body">
        <div class="dataTables_wrapper form-inline dt-bootstrap no-footer">
            <div class="row">
                <div class="col-sm-12">
                    <table id="dataTable" class="table table-bordered table-hover table-striped dataTable">
                        <thead>
                            <tr>
                                <th width="7%">Mã</th>
                                <th>Tên</th>
                                <th>Phái</th>
                                <th>Đi động</th>
                                <th>Điện thoại</th>
                                <th>E-Mail</th>
                                <th>Địa chỉ</th>
                                <th>Ghi chú</th>
                                <th width="7%">Chọn</th>
                            </tr>
                        </thead>
                        <tbody id="table">
                            <% @list.each do |val| %>
                              <tr>
                                  <td align="center"><%=val['id_khachhang']%></td>
                                  <td><%=val['tenkhachhang']%></td>
                                  <td>
                                      <% if  val['gioitinh'].to_i == 1 %>
                                          Nam
                                      <% else %>
                                          Nữ
                                      <% end %>
                                  </td>
                                  <td><%=val['didong'] %></td>
                                  <td><%=val['sdt']%></td>
                                  <td><%=val['email']%></td>
                                  <td><%=val['diachi']%></td>
                                  <td><%=val['ghichu']%></td>
                                  <td align="center">
                                      <a href="/khachhang/edit/<%=val['id_khachhang']%>" class="text-success"><i class="glyphicon glyphicon-pencil"></i></a>
                                      <a href="/khachhang/delete/<%=val['id_khachhang']%>" onclick="return DeleteRow();" class="text-danger"><i class="glyphicon glyphicon-trash"></i></a>
                                  </td>
                              </tr>
                            <%end%>

                        </tbody>                
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


